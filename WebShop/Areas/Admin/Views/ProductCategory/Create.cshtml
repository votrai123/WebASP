@model Model.EF.ProductCategory

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>CREATE CATEGORY PRODUCT</h2>


@using (Html.BeginForm("Create", "ProductCategory", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-row">
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name" } })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.ParentID)
            @Html.ValidationMessageFor(model => model.ParentID, "", new { @class = "text-danger" })
            @Html.DropDownListFor(model => model.ParentID, new SelectList(ViewBag.Category, "ID", "Name"), new { @class = "form-control" })

        </div>
    </div>
    
    <div class="form-row">
        <div class="form-group col-md-8">
            @Html.LabelFor(model => model.MetaDescriptions)
            @Html.ValidationMessageFor(model => model.MetaDescriptions, "", new { @class = "text-danger" })
            @Html.EditorFor(model => model.MetaDescriptions, new { htmlAttributes = new { @class = "form-control", @placeholder = "Decription" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            <button class="btn btn-success btn-lg btn-block" type="submit">Create</button>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
