@model Model.EF.Slide

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>CREATE SLIDE</h2>

@using (Html.BeginForm("Create", "Slide", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Image)
                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                @Html.TextBox("file", "", new { type = "file", @class = "form-control" })
                @ViewBag.Message
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Link)
                @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.Link, new { htmlAttributes = new { @class = "form-control", @placeholder = "Link to the product" } })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.TextBig)
                @Html.ValidationMessageFor(model => model.TextBig, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.TextBig, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email" } })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.TextSmall)
                @Html.ValidationMessageFor(model => model.TextSmall, "", new { @class = "text-danger" })
                @Html.PasswordFor(model => model.TextSmall, new { @class = "form-control", @placeholder = "Password" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <button class="btn btn-success btn-lg btn-block" type="submit">Create</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
