                </div>

                <div class="sidebar-box ftco-animate">
                    <h3 class="heading">Tag Cloud</h3>
                    <div class="tagcloud">
                        @{
                            var tagall = (List<Model.EF.Tag>)ViewBag.TagAll;
                            foreach (var tags in tagall)
                            {
